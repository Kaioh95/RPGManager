<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AtributosActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mochila"
                android:gravity="center"
                android:textSize="18dp"
                android:paddingHorizontal="15dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atributos"
                android:gravity="center"
                android:textSize="30dp"
                android:paddingTop="10dp"
                android:paddingHorizontal="25dp">


            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mochila"
                android:visibility="invisible"
                android:gravity="center"
                android:textSize="18dp"
                android:paddingHorizontal="15dp">


            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingVertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pontos: "
                android:textSize="16dp">


            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16dp"
                android:id="@+id/tvPontosAtuais">

            </TextView>

        </LinearLayout>

        <!--Primeira Linha de Atributos-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingVertical="4dp">

            <Button
                android:layout_width="30dp"
                android:visibility="invisible"
                android:layout_height="40dp"
                android:text="-" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nível"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvNivel"
                    android:text="0"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <Button
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="+"
                android:id="@+id/btnMaisNivel"/>

        </LinearLayout>


        <!--Fim da Primeira Linha de Atributos-->

        <!--Segunda Linha de Atributos-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingVertical="4dp">

            <Button
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="-"
                android:id="@+id/btnMenosForca"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Força"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvForca"
                    android:text="0"
                    android:gravity="center_horizontal"/>
            </LinearLayout>


            <Button
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="+"
                android:id="@+id/btnMaisForca"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="            "
                android:visibility="invisible"/>

            <Button
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="-"
                android:id="@+id/btnMenosConstituicao"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Constituição"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvConstituicao"
                    android:text="0"
                    android:gravity="center_horizontal"/>
            </LinearLayout>


            <Button
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="+"
                android:id="@+id/btnMaisConstituicao"/>



        </LinearLayout>


        <!--Fim da Segunda Linha de Atributos-->

        <!--Terceira Linha de Atributos-->

        <LinearLayout
