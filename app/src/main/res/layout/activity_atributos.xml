                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="-"
                android:id="@+id/btnMenosInteligencia"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inteligência"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvInteligencia"
                    android:text="0"
                    android:gravity="center_horizontal"/>
            </LinearLayout>


            <Button
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="+"
                android:id="@+id/btnMaisInteligencia"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="            "
                android:visibility="invisible"/>

            <Button
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="-"
                android:id="@+id/btnMenosDestreza"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Destreza"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDestreza"
                    android:text="0"
                    android:gravity="center_horizontal"/>
            </LinearLayout>


            <Button
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="+"
                android:id="@+id/btnMaisDestreza"/>



        </LinearLayout>

        <!--Fim da Terceira Linha de Atributos-->

        <!--Quarta Linha de Atributos-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingVertical="4dp">

            <Button
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="-"
                android:id="@+id/btnMenosSabedoria"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sabedoria"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSabedoria"
                    android:text="0"
                    android:gravity="center_horizontal"/>
            </LinearLayout>


            <Button
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="+"
                android:id="@+id/btnMaisSabedoria"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="            "
                android:visibility="invisible"/>

            <Button
